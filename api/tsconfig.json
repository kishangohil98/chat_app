{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "lib": ["es6"],
    "rootDir": "./",
    "paths": {
      "*": ["*", "src/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "baseUrl": ".",
  }
}
